<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <com.example.lock_zdlock.SliderRelativeLayout android:id="@+id/slider_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical">

         <ImageView
            android:id="@+id/alarm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="50dip"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/slider_ico_alarm" />
        
        <TextView
            android:id="@+id/getup_slider"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/getup_slider_ico_normal"
            android:src="@drawable/getup_slider_ico_normal" />

         <ImageView
            android:id="@+id/arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="30dip"
            android:layout_toLeftOf="@id/alarm"
            android:layout_alignTop="@id/alarm"
            android:background="@drawable/slider_animation"/>
        
        <TextView
            android:id="@+id/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/arrow"
            android:layout_alignTop="@id/alarm"
            android:layout_marginRight="30dip"
            android:text="@string/hint_text" />
       


       
    </com.example.lock_zdlock.SliderRelativeLayout>

</LinearLayout>